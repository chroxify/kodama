{
  "name": "kodama",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome lint .",
    "format": "biome check .",
    "prepare": "husky",
    "format:fix": "biome check . --write",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sherif": "^1.10.0",
    "turbo": "^2.8.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "bun format:fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
